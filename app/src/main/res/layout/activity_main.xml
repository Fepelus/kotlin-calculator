<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fepelus.rpcapp.MainActivity">
    <LinearLayout
        android:id="@+id/stack_container"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Stack 4"
            android:id="@+id/stack_4_tv"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:text="Stack 3"
            android:id="@+id/stack_3_tv"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_height="30dp" />
        <TextView
            android:text="Stack 2"
            android:id="@+id/stack_2_tv"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:text="Stack 1"
            android:id="@+id/stack_1_tv"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_height="30dp" />
        <TextView
            android:text="Stack 0"
            android:id="@+id/stack_0_tv"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_height="30dp" />
        <TextView
            android:text="Sandpit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/sandpit_tv"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="30dp" />
    </LinearLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stack_container"
        android:columnCount="4"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/undo_button"
            android:padding="0dp"
            android:text="Undo"
            android:textSize="13dp" android:layout_width="82dp" />
        <Button android:text="Pow" android:id="@+id/power_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="Swap" android:id="@+id/swap_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:id="@+id/delete_button"   android:text="Delete"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="Redo" android:id="@+id/redo_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="+/-" android:id="@+id/reverse_sign_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="/" android:id="@+id/divide_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="*" android:id="@+id/multiply_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="7" android:id="@+id/seven_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="8" android:id="@+id/eight_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="9" android:id="@+id/nine_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="-" android:id="@+id/subtract_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="4" android:id="@+id/four_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="5" android:id="@+id/five_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="6" android:id="@+id/six_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="+" android:id="@+id/plus_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="1" android:id="@+id/one_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="2" android:id="@+id/two_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button android:text="3" android:id="@+id/three_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
        <Button
            android:id="@+id/enter_button"
            android:layout_rowSpan="2"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            android:layout_gravity="fill"
            android:text="Enter" />
        <Button
            android:id="@+id/zero_button"
            android:layout_columnSpan="2"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            android:layout_gravity="fill"
            android:text="0" />
        <Button android:text="." android:id="@+id/decimal_point_button"
            android:padding="0dp" android:textSize="13dp" android:layout_width="82dp"
            />
    </GridLayout>

</RelativeLayout>
